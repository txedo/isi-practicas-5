# ==========================================================
# Orden para acceder a la consola de MySQL:
    # mysql -u root -p

# Orden para usar una base de datos:
    # use <db>

# Orden para borrar una base de datos: 
    # drop database <db>;

# Orden para borrar una tabla:
    # drop table <table>;

# Orden para ver los atributos de una tabla:
    # describe <table>;

# Orden para ver todas las bases de datos:
    # show databases;

# Orden para ver las tablas de una base de datos concreta:
    # show tables;

# Para crear inicialmente la base de datos, acceder al 
# interprete de MySQL y copiar las siguientes lineas en el
# ===========================================================


CREATE DATABASE ari CHARACTER SET utf8 COLLATE utf8_bin;
USE ari;

CREATE TABLE dic (
       term VARCHAR(255) NOT NULL default '',
       num_docs INT NOT NULL default '1',
       PRIMARY KEY (term)
) TYPE=InnoDB;

CREATE TABLE doc (
       id_doc INT NOT NULL AUTO_INCREMENT,
       title TEXT default '',
       path TEXT NOT NULL default '',
       PRIMARY KEY (id_doc)
) TYPE=InnoDB AUTO_INCREMENT=1;

CREATE TABLE posting_file (
       id INT NOT NULL AUTO_INCREMENT,
       term VARCHAR(255) NOT NULL default '',
       id_doc INT NOT NULL,
       frequency INT NOT NULL default '1',
       PRIMARY KEY (id),
       FOREIGN KEY (term) REFERENCES dic (term) ON DELETE CASCADE ON UPDATE CASCADE,
       FOREIGN KEY (id_doc) REFERENCES doc (id_doc) ON DELETE CASCADE ON UPDATE CASCADE
) TYPE=InnoDB AUTO_INCREMENT=1;




